{
    # Global config
    email support@your-domain.com
}

your-domain.com {
    # 1) Simple header auth: require X-MCP-Token
    @auth {
        not header X-MCP-Token "your-secret-token-123456"
    }
    respond @auth "Unauthorized" 401

    # 2) Reverse proxy to MCP Server
    reverse_proxy thordata-mcp:8000 {
        # SSE tuning
        flush_interval -1
    }
}